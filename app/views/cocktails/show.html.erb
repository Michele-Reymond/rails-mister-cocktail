<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to(dose_path(dose), options = {method: :delete, data: { confirm: "Are you sure?" } }) do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
      </li>
<% end %>


<%= link_to 'back to all cocktails', cocktails_path %>
<%= link_to 'add an ingredient', new_cocktail_dose_path(@cocktail) %>


