<div class="cocktail-show">
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 200, crop: :fill %>
  <div>
    <h1><%= @cocktail.name %></h1>
    <div class="liste">
    <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to(dose_path(dose), options = {method: :delete, data: { confirm: "Are you sure?" } }) do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          </li>
    <% end %>
    </div>
    <%= link_to 'add an ingredient', new_cocktail_dose_path(@cocktail), class: "new-button" %>
  </div>
</div>
