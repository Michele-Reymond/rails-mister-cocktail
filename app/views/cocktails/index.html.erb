<div class="container">
  <div class="cocktails">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
          <div class="cocktail">
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
              <li><%= cocktail.name.downcase %></li>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
